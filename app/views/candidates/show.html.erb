<br />

<div class="booyah-box col-10 offset-1">
  <h1><%= @candidate.name %></h1>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12">
      <% if current_user && current_user == @candidate.user %>
        <br />
        <br />
        <%= link_to 'Vote', admin_candidate_path(@candidate), class: 'btn btn-danger btn-large' %>
      <% end %>
    </div>


    <div class="col-sm-8 col-12">
      <%= @candidate.description %>
    </div>
  </div>

  <div class="col-12">
    <% @candidate.sections.each do |section| %>
      <div class="section">
        <h3>
          <%= section.title %>
        </h3>
      </div>
    <% end %>
  </div>
</div>